
#Color
# Define colors variables:
set $darkbluetrans	#08052be6
set $darkblue		#08052b
set $lightblue		#5294e2
set $urgentred		#e53935
set $white		#ffffff
set $black		#000000
set $purple		#e345ff
set $darkgrey		#383c4a
set $grey		#b0b5bd
set $mediumgrey		#8b8b8b
set $yellowbrown	#e1b700

# define colors for windows:
#class		        	border		bground		text		indicator	child_border
client.focused		    $lightblue	$darkblue	$white		$purple		$mediumgrey
client.unfocused	    $darkblue	$darkblue	$grey		$purple		$darkgrey
client.focused_inactive	$darkblue	$darkblue	$grey		$purple		$black
client.urgent		    $urgentred	$urgentred	$white		$purple		$yellowbrown

set $mod Mod4

font pango: Noto Sans Regular 12

gaps inner 6
gaps outer 3

#Brillo
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym XF86MonBrightnessUp exec brightnessctl set +10%

# captura
#bindsym Print exec spectacle
 bindsym Print exec gnome-screenshot -i

# Desktop notifications
exec --no-startup-id dbus-launch dunst --config ~/.config/dunst/dunstrc

#luz nocturna
exec --no-startup-id redshift
exec --no-startup-id flameshot

# uncomment the next line, use arandr to setup displays and save the file as monitor:
exec --no-startup-id ~/.screenlayout/monitor.sh

# set wallpaper
exec --no-startup-id sleep 2 && nitrogen --restore
#exec --no-startup-id feh --bg-fill /usr/share/endeavouros/backgrounds/endeavouros_i3.png

# set powersavings for display:
exec --no-startup-id xset s 480 dpms 600 600 600

#get auth work with polkit-gnome
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1



#buscador de proyectos 
bindsym $mod+c exec ls /mnt/PROGRAMAS/IOTecnova | rofi -show -dmenu -font "Monospace 12" -i | xargs -I_ webstorm /mnt/PROGRAMAS/IOTecnova/_
bindsym $mod+b exec ls /mnt/PROGRAMAS/IOTecnova | rofi -show -dmenu -font "Monospace 12" -i | xargs -I_ code /mnt/PROGRAMAS/IOTecnova/_

bindsym $mod+t exec ls /mnt/PROGRAMAS/proyecto-pruebas | rofi -show -dmenu -font "Monospace 12" -i | xargs -I_ webstorm /mnt/PROGRAMAS/proyecto-pruebas/_
bindsym $mod+y exec ls /mnt/PROGRAMAS/proyecto-pruebas | rofi -show -dmenu -font "Monospace 12" -i | xargs -I_ code /mnt/PROGRAMAS/proyecto-pruebas/_


